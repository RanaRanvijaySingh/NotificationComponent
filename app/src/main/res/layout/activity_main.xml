<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.notificationcomponent.MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/tab_simple_notification"/>

    <Button
        android:id="@+id/buttonSimpleNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple notification"/>

    <Button
        android:id="@+id/buttonBigNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Big notification"/>

    <Button
        android:id="@+id/buttonBigPictureNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Picture notification"/>

    <Button
        android:id="@+id/buttonInboxNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inbox notification"/>

    <Button
        android:id="@+id/buttonMessagingNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Messaging notification"/>

    <Button
        android:id="@+id/buttonReplyNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reply notification"/>

</LinearLayout>
